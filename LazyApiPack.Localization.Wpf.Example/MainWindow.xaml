<Window x:Class="LazyApiPack.Localization.Wpf.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LazyApiPack.Localization.Wpf.Example"
        xmlns:loc="clr-namespace:LazyApiPack.Localization.Wpf;assembly=LazyApiPack.Localization.Wpf"
        xmlns:loci="clr-namespace:LazyApiPack.Localization;assembly=LazyApiPack.Localization"

        
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="{loc:Localizer Captions.MainTitle}" HorizontalAlignment="Center" VerticalAlignment="Top" Height="30" Width="800" Click="Button_Click" Margin="0,217,0,0" HorizontalContentAlignment="{loc:HorizontalAlignmentLocalizer}" />
        <ComboBox HorizontalAlignment="Right" VerticalAlignment="Top" Height="25" Width="150" ItemsSource="{Binding Service.AvailableLocalizations}" SelectedItem="{Binding Service.CurrentLangauge}" >
            <ComboBox.ItemTemplate>
                <DataTemplate DataType="{x:Type loci:ILocalizationHeader}">
                    <TextBlock Text="{Binding LocalizedLanguageName}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
    </Grid>
</Window>
